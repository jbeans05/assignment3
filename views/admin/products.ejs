<%- include('../includes/head.ejs') %>
    
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
          
        <% if(prods.length > 0) { %>
           <div class="grid">
               <% for (let item of prods) { %>
               <article class="card__product-item">
                    <header class="card__header">
                       <h1 class="product__title"><%= item.title %> </h1>
                    </header>
                    <div class="card__image">
                        <img src="<%= item.imageUrl %>", alt="book">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">$ <%= item.price %></h2>
                        <p class="product__description"><%= item.description %></p>
                    </div>
                    <div class="card__actions">
                        <a href="/admin/edit-product/" class="button">Edit</a>
                        <form action="/admin/delete-product" method="POST">
                            <button class="button" type="submit">Delete</button>
                        </form>
                        
                    </div>
                </article>
                <% } %>
           </div>
        <% } else { %>
            <h1>No Product Found</h1>
        <% } %>       
<%- include('../includes/end.ejs') %>